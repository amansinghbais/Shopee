<%- include('includes/head') %>
    <%- include('includes/nav') %>


        <section class="vh-100" style="padding-top: 60px;">
            <div class="container h-100">
                <div class="row d-flex align-items-center justify-content-center h-100">
                    <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                        <h2 class="pb-2">Create an Account</h2>

                        <% if(typeof error != 'undefined'){ %>
                            <% if(typeof error.message != 'undefined'){ %>
                                <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-between align-items-center py-2 px-3" role="alert">
                                    <strong><%= error.message %></strong>
                                    <button type="button" class="btn close border-0" data-bs-dismiss="alert" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                  </div>
                            <% } %>
                        <% } %>

                        <form action="/register" method="post">

                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    <label class="form-label" for="name">Your Name</label>
                                    <input type="text" name="name" value="<%= typeof name != 'undefined' ? name : '' %>" class="form-control" required/>
                                    <% if(typeof name != 'undefined'){ %>
                                        <small id="passwordHelp" class="text-danger"><%= error.name %></small> 
                                    <% } %>
                                </div>
                            </div>
                            
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    <label class="form-label" for="email">Your Email</label>
                                    <input type="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" class="form-control" required/>
                                    <% if(typeof email != 'undefined'){ %>
                                        <small id="passwordHelp" class="text-danger"><%= error.email %></small> 
                                    <% } %>
                                </div>
                            </div>

                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    <label class="form-label" for="address">Your Address</label>
                                    <input type="text" name="address" value="<%= typeof address != 'undefined' ? address : '' %>" class="form-control" required/>
                                    <% if(typeof address != 'undefined'){ %>
                                        <small id="passwordHelp" class="text-danger"><%= error.address %></small> 
                                    <% } %>
                                </div>
                            </div>
                            
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    <label class="form-label" for="mobile">Your Mobile</label>
                                    <input type="number" name="mobile" value="<%= typeof mobile != 'undefined' ? mobile : '' %>" class="form-control" required/>
                                    <% if(typeof mobile != 'undefined'){ %>
                                        <small id="passwordHelp" class="text-danger"><%= error.mobile %></small> 
                                    <% } %>
                                </div>
                            </div>
                            
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    <label class="form-label" for="password">Your password</label>
                                    <input type="password" name="password" class="form-control" required/>
                                    <% if(typeof password != 'undefined'){ %>
                                        <small id="passwordHelp" class="text-danger"><%= error.password %></small> 
                                    <% } %>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-warning rounded-0 px-5 btn-lg w-100">Sign Up</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-8 col-lg-7 col-xl-6">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                            class="img-fluid" alt="Sample image">
                    </div>
                </div>
            </div>
        </section>


        <%- include('includes/foot') %>